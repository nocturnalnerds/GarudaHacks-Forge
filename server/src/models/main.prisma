generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  email              String   @unique
  name               String?
  password           String
  languageSubscribed String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  solvedProblems     UserSolved[]
}


enum difficulty{
  easy
  medium
  hard
}

model QuizProblems {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  question  String
  answer    String
  difficulty String 
  language String
  solvedBy  UserSolved[]
}


model UserSolved {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  user       User         @relation(fields: [userId], references: [id])
  userId     String       @db.ObjectId
  problem    QuizProblems @relation(fields: [problemId], references: [id])
  problemId  String       @db.ObjectId
  solved     Boolean      @default(false)
  solvedAt   DateTime     @default(now())
}


model Chat{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  from    String
  to      String
  message String
  timestamp DateTime @default(now())
}

model wotd{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  content String
  translation String
  definition String
  example String
  language String
  signedUrl String
}

model sotd{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  content String
  translation String
  definition String
  example String
  language String
  signedUrl String
}

model testQuestion{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  question String
  choices String[]
  answer   String
  language String
  difficulty String 
}

model CeritaRakyat{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  picture String
  caption String
  audio String[] // formatnya akan ada {language: "...", audiokey: "..."}
}

